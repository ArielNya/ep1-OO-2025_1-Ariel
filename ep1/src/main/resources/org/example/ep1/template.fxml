<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ep1.Formaasd">
   <children>
      <Label fx:id="titleLabel" text="Criar/Editar Entidade" style="-fx-font-size: 18px; -fx-font-weight: bold;">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <ScrollPane fx:id="fieldsScrollPane" fitToWidth="true" prefHeight="300.0">
         <content>
            <GridPane fx:id="fieldsGridPane" hgap="10.0" vgap="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>

      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Salvar" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 16;" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancelar" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 16;" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>